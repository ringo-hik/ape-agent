# APE Core 환경 변수 설정 예시 파일
# 실제 사용 시 이 파일을 .env로 복사하고 값을 수정하세요

# API 설정
API_HOST=0.0.0.0
API_PORT=8001
API_TIMEOUT=120
API_STREAM=true

# 보안 설정
USE_SSL=false
SSL_CERT=
SSL_KEY=
VERIFY_SSL=false

# 기본 LLM 서비스 설정
LLM_ENDPOINT=http://your-llm-service/api
LLM_API_KEY=your-llm-api-key
LLM_VERIFY_SSL=false
LLM_TIMEOUT=30
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# 한국어 LLM 서비스 설정 (선택사항)
LLM_KO_ENDPOINT=http://your-llm-ko-service/api
LLM_KO_API_KEY=your-llm-ko-api-key
LLM_KO_MAX_TOKENS=4096
LLM_KO_TEMPERATURE=0.7

# 임베딩 서비스 설정
EMBEDDING_ENDPOINT=http://your-embedding-service/api
EMBEDDING_API_KEY=your-embedding-api-key

# OpenRouter 백업 설정
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_TIMEOUT=30
OPENROUTER_MAX_TOKENS=4096
OPENROUTER_TEMPERATURE=0.7

# 기본 모델 설정
DEFAULT_MODEL=primary
DEFAULT_BACKUP_MODEL=openrouter-llama

# 임베딩 모델 설정
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_MODEL_PATH=models/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_MAX_SEQ_LENGTH=512

# 벡터 데이터베이스 설정
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=data/chroma_db
VECTOR_DB_COLLECTION=documents
VECTOR_DB_DISTANCE_FUNC=cosine

# 문서 처리 설정
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_CHUNK_OVERLAP=200

# 검색 설정
SEARCH_DEFAULT_TOP_K=3
SEARCH_MIN_RELEVANCE_SCORE=0.6

# SWDP 설정
SWDP_ENABLED=true
SWDP_API_URL=https://swdp.example.com/api
SWDP_USERNAME=swdp_user
SWDP_PASSWORD=swdp_password
SWDP_TIMEOUT=30
# 특수문자 포함 비밀번호 예시 - 자동으로 URL 인코딩됨
SWDP_DB_URI=postgresql://db_user:p@ssw0rd@localhost:5432/swdp_db

# Jira 설정
JIRA_ENABLED=true
JIRA_API_URL=https://jira.example.com/rest/api/2
JIRA_USERNAME=jira_user
JIRA_PASSWORD=jira_password
JIRA_TIMEOUT=30
JIRA_DEFAULT_PROJECT=DEMO

# Bitbucket 설정
BITBUCKET_ENABLED=true
BITBUCKET_API_URL=https://bitbucket.example.com/rest/api/1.0
BITBUCKET_USERNAME=bitbucket_user
BITBUCKET_PASSWORD=bitbucket_password
BITBUCKET_TIMEOUT=30

# Pocket 설정
POCKET_ENABLED=true
POCKET_API_URL=https://pocket.example.com/api
POCKET_USERNAME=pocket_user
POCKET_PASSWORD=pocket_password
POCKET_REGION=us-east-1
POCKET_TIMEOUT=30

# S3 설정
S3_ENABLED=true
S3_API_URL=https://s3.amazonaws.com
S3_USERNAME=s3_user
S3_PASSWORD=s3_password
S3_REGION=us-east-1
S3_TIMEOUT=30